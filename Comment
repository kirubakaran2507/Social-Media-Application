public class Comment {
    private static int no;
    private int commentNo;
    private String comment;
    private User user;

    public Comment(String comment,User user){
        this.commentNo = ++no;
        this.comment = comment;
        this.user = user;
    }

    public int getCommentNo() {
        return commentNo;
    }

    public String getComment() {
        return comment;
    }

    public User getUser() {
        return user;
    }
}
